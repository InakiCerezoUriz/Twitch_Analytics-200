<?xml version="1.0"?>
<ruleset name="Twitch Analytics MD">
    <rule ref="rulesets/cleancode.xml">
        <exclude name="StaticAccess"/>
        <exclude name="ElseExpression"/>
    </rule>
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity"/>
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" description="The npath reporting threshold" value="512"/>
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml">
        <exclude name="ShortVariable"/>
        <exclude name="LongVariable"/>
        <exclude name="LongClassName"/>
    </rule>
    <rule ref="rulesets/namig.xml/ShortVariable"
        since="0.2"
        message="Avoid variables with short names like {0}. Configured minimum length is {1}."
        class="PHPMD\Rule\Namig\ShortVariable"
        externalInfoUrl="http://phpmd.org/rules/namign.html#shortvariable">
        <priority>3</priority>
        <properties>
            <property name="minimum" value="2"/>
        </properties>
    </rule>
</ruleset>